# Environment Configuration
# Copy this file to .env.local and fill in your values

# Application Environment
# Options: production | qa | demo | development
VITE_APP_ENV=development

# API & Services
VITE_WHATSAPP_TOKEN=your_whatsapp_token_here
VITE_WHATSAPP_API_URL=https://api.whatsapp.com/send

# Domain Configuration
VITE_PUBLIC_DOMAIN=pickpoint.my.id
VITE_ADMIN_DOMAIN=admin.pickpoint.my.id
VITE_QA_DOMAIN=qa.pickpoint.my.id
VITE_DEMO_DOMAIN=demo.pickpoint.my.id

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DEBUG_MODE=false

# Storage
VITE_STORAGE_PREFIX=pickpoint_

# Security
VITE_SESSION_TIMEOUT=3600000
VITE_MAX_LOGIN_ATTEMPTS=5
