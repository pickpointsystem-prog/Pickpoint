# Environment Configuration
# Copy this file to .env.local and fill in your values

# Application Environment
# Options: production | qa | demo | development
VITE_APP_ENV=development

# API & Services
VITE_WHATSAPP_TOKEN=your_whatsapp_token_here
# Recommended: use serverless proxy to avoid CORS
VITE_WHATSAPP_API_URL=/api/wa-proxy

# Domain Configuration
VITE_PUBLIC_DOMAIN=pickpoint.my.id
VITE_ADMIN_DOMAIN=admin.pickpoint.my.id
VITE_QA_DOMAIN=qa.pickpoint.my.id
VITE_DEMO_DOMAIN=demo.pickpoint.my.id

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DEBUG_MODE=false

# Storage
VITE_STORAGE_PREFIX=pickpoint_

# Security
VITE_SESSION_TIMEOUT=3600000
VITE_MAX_LOGIN_ATTEMPTS=5

# Supabase (add these for database connectivity)
VITE_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
VITE_SUPABASE_ANON_KEY=YOUR_PUBLIC_ANON_KEY
